<?php

function sales_taxes_get_basic_sales_tax($product, $price) {
  if (in_array($product, ['book', 'food', 'medical product'])) {
    return 0;
  }
  else {
    return $price / 10;
  }
}

function sales_taxes_get_import_duty($price, $imported) {
  if ($imported) {
    return $price * .05;
  }
  else {
    return 0;
  }
}
