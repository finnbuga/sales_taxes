<?php
class SalesTaxesUnitTestCase extends DrupalUnitTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Sales Taxes unit tests',
      'description' => 'Test that the core logic works properly',
      'group' => 'Sales Taxes',
    );
  }

  function testSalesTaxOnA30DollarsCDis3() {
    // Given
    $product = 'CD';
    $price = 30;

    // Solution
    $tax = 3;

    // Then
    $this->assertEqual($tax, 3);
  }

  function testSalesTaxOnA20DollarsBookis0() {
    // Given
    $product = 'book';
    $price = 20;

    // Solution
    $tax = 0;

    // Then
    $this->assertEqual($tax, 0);
  }
}
